# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Defaults
[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

# HTML types get 2 space indentation
[*.{hbs,html,jsp,md,mdx}]
indent_size = 2
max_line_length = off
